<div class="extra">
  <h1><%= @creature.name %></h1>
  <p><%= @creature.desc %></p>
  <strong>Tags:</strong>
  <% @creature.tags.each do |tag| %>
  <%= link_to tag.name, creature_tag_path(tag.name) %>
  <% end %>
  <table class="table">
      <tr>
      <td><%= link_to 'Edit Creature', edit_creature_path(params[:id]), :class => "btn btn-warning " %></td>
      <td><%= link_to 'Delete Creature', @creature, :method => :delete, :data => {:confirm => "Are you sure?"}, :class => "btn btn-danger " %></td>
    </tr>
  </table>
  <h1>Results <small><%= @search %></small></h1>

<% @results.each do |photo| %>
<%= link_to image_tag(photo.first), photo.last %>

<% end %>
</div>
