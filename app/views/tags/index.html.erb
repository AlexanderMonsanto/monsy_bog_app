<h1>Tags</h1>
<div class="extra">

  <table class="table  text-center table-hover">
  <% @tags.each do |f| %>
    <tr class="success">
      <td class="text-center"><strong><%= link_to f.name, creature_tag_path(f.name) %></strong></td>
      <td class="text-center"><%= link_to 'Delete Tag', tag_path(f.id), :method => :delete, :data => {:confirm => "Are you sure?"}, :class => "btn btn-sm btn-warning " %></td>
    </tr>
  <% end %>

  </table>

  <%= link_to "Add New Tag", new_tag_path, class: "btn btn-xl btn-danger" %>

</div>
